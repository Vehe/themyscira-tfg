@import url("https://fonts.googleapis.com/css?family=Lato");
html, body {
  margin: 0;
  width: 100%;
  font-family: 'Lato', sans-serif;
}

body {
  padding-bottom: 50px;
}

body header {
  position: relative;
  height: 100vh;
  width: 100%;
  background-color: #d1d5da;
  background-image: url("../img/bgposible2.png");
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

body header .h-navbar {
  height: auto;
  display: -ms-grid;
  display: grid;
  -ms-grid-columns: (1fr)[3];
      grid-template-columns: repeat(3, 1fr);
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  text-align: center;
}

body header .h-navbar .h-navbar-logo img {
  height: 110px;
  padding: 20px;
}

body header .h-navbar .h-navbar-search {
  padding: 0 50px 0 50px;
}

body header .h-navbar .h-navbar-search form {
  display: -ms-grid;
  display: grid;
  -ms-grid-columns: 90% 10%;
      grid-template-columns: 90% 10%;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  justify-items: center;
}

body header .h-navbar .h-navbar-search form input {
  width: calc(100% - 20px);
  padding: 15px 10px 15px 10px;
  border-radius: 7px 0 0 7px;
  border: none;
  font-size: 1em;
  color: grey;
}

body header .h-navbar .h-navbar-search form .lupa-search-bar {
  border-radius: 0 7px 7px 0;
  height: 100%;
  width: 100%;
  background-color: whitesmoke;
  border-left: 1px solid #d1d5da;
  cursor: pointer;
  display: -ms-grid;
  display: grid;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  justify-items: center;
}

body header .h-navbar .h-navbar-search form .lupa-search-bar img {
  height: 30px;
}

body header .h-navbar nav .nav-responsive {
  display: none;
  font-size: 2em;
  text-align: right;
  padding-right: 60px;
  cursor: pointer;
  color: white;
}

body header .h-navbar nav .nav-non-responsive {
  z-index: 10000;
}

body header .h-navbar nav .nav-non-responsive ul {
  margin: 0;
  padding: 0;
}

body header .h-navbar nav .nav-non-responsive ul li {
  list-style-type: none;
  display: inline-block;
  padding: 20px;
}

body header .h-navbar nav .nav-non-responsive ul li a {
  text-decoration: none;
  color: white;
  font-size: 1.1em;
}

body header .h-navbar nav .nav-non-responsive ul li a:hover {
  color: #00fcf8;
}

body header .polygon-container {
  width: 100%;
  height: 35vh;
  position: absolute;
  bottom: 0;
  left: 0;
}

body header .polygon-container .polygon-svg-decoration {
  width: 100%;
  height: 100%;
  display: -ms-grid;
  display: grid;
  -ms-grid-columns: (1fr)[2];
      grid-template-columns: repeat(2, 1fr);
}

body header .polygon-container .polygon-svg-decoration svg {
  height: 100%;
  width: 100%;
}

body header .polygon-container .polygon-svg-decoration svg polygon {
  fill: white;
}

body header .polygon-container .polygon-svg-decoration #Layer_2 {
  -webkit-transform: scaleX(-1);
  transform: scaleX(-1);
}

body main {
  margin-top: 70px;
  display: -ms-grid;
  display: grid;
  -ms-grid-columns: 15% 70% 15%;
      grid-template-columns: 15% 70% 15%;
}

body main .main-content article {
  margin-bottom: 30px;
  background-color: whitesmoke;
  border: 1px solid #d1d5da;
  border-radius: 5px;
}

body main .main-content article .article-content {
  height: 300px;
  display: -ms-grid;
  display: grid;
  -ms-grid-columns: (1fr)[2];
      grid-template-columns: repeat(2, 1fr);
}

body main .main-content article .article-content .a-video-embed {
  padding: 20px 40px 20px 20px;
}

body main .main-content article .article-content .a-video-embed iframe {
  height: 100%;
  width: 100%;
  -webkit-box-shadow: 0px 2px 19px 3px rgba(0, 0, 0, 0.75);
  box-shadow: 0px 1px 19px 1px rgba(0, 0, 0, 0.75);
}

body main .main-content article .article-content .a-video-info {
  padding: 20px 20px 20px 0;
  position: relative;
}

body main .main-content article .article-content .a-video-info .a-video-info-title {
  font-weight: 600;
  font-size: 1.7em;
}

body main .main-content article .article-content .a-video-info .a-video-info-social {
  margin-top: 10px;
}

body main .main-content article .article-content .a-video-info .a-video-info-social a {
  padding-right: 10px;
  text-decoration: none;
  font-size: 1.5em;
}

body main .main-content article .article-content .a-video-info .a-video-info-social a .rojo {
  color: red;
}

body main .main-content article .article-content .a-video-info .a-video-info-social a .negro {
  color: black;
}

body main .main-content article .article-content .a-video-info .a-video-info-social a .azul {
  color: #00acee;
}

body main .main-content article .article-content .a-video-info .a-video-info-social a .morado {
  color: #6441a5;
}

body main .main-content article .article-content .a-video-info .a-video-info-marks {
  margin-top: 15px;
}

body main .main-content article .article-content .a-video-info .a-video-info-marks ol {
  margin: 0;
  padding: 0;
  list-style-type: none;
  columns: 2;
  -webkit-columns: 2;
  -moz-columns: 2;
}

body main .main-content article .article-content .a-video-info .a-video-info-marks ol li {
  cursor: pointer;
  padding: 5px;
}

body main .main-content article .article-content .a-video-info .a-video-info-marks ol li i {
  margin-right: 10px;
}

body main .main-content article .article-content .a-video-info .a-video-info-marks ol li:hover {
  color: #3232CD;
  font-weight: 700;
}

body main .main-content article .article-content .a-video-info button {
  cursor: pointer;
  position: absolute;
  bottom: 20px;
  left: 0;
  border: none;
  border-radius: 5px;
  padding: 5px 10px 5px 10px;
  background-color: #3232CD;
  color: whitesmoke;
  font-family: 'Lato', sans-serif;
  font-weight: 600;
}

body main .main-content article .article-video-tags {
  display: none;
  padding: 0px 20px 10px 20px;
}

body main .main-content article .article-video-tags .tags {
  padding: 20px 0 10px 0;
}

body main .main-content article .article-video-tags .tags ol {
  margin: 0;
  padding: 0;
  list-style-type: none;
}

body main .main-content article .article-video-tags .tags ol li {
  display: inline-block;
  margin-bottom: 5px;
  border: none;
  border-radius: 5px;
  background-color: #3232CD;
  color: whitesmoke;
  font-family: 'Lato', sans-serif;
  padding: 3px 8px 3px 8px;
  font-weight: 600;
  font-size: 0.8em;
}

/* -----------------------------------------------------------------------------------------
                                        RESPONSIVE
------------------------------------------------------------------------------------------ */
@media only screen and (max-width: 1600px) {
  body header .h-navbar .h-navbar-search form {
    display: -ms-grid;
    display: grid;
    -ms-grid-columns: 85% 15%;
        grid-template-columns: 85% 15%;
  }
}

@media only screen and (max-width: 1270px) {
  body header .h-navbar {
    display: -ms-grid;
    display: grid;
    -ms-grid-columns: 20% 40% 40%;
        grid-template-columns: 20% 40% 40%;
  }
}

@media only screen and (max-width: 1200px) {
  body main {
    display: -ms-grid;
    display: grid;
    -ms-grid-columns: 10% 80% 10%;
        grid-template-columns: 10% 80% 10%;
  }
}

@media only screen and (max-width: 1061px) {
  body header .h-navbar nav .nav-non-responsive ul li {
    padding: 15px;
  }
  body header .h-navbar nav .nav-non-responsive ul li a {
    font-size: 1em;
  }
}

@media only screen and (max-width: 1024px) {
  body main {
    display: -ms-grid;
    display: grid;
    -ms-grid-columns: 5% 90% 5%;
        grid-template-columns: 5% 90% 5%;
  }
}

@media only screen and (max-width: 905px) {
  body header .h-navbar {
    display: -ms-grid;
    display: grid;
    -ms-grid-columns: 20% 70% 10%;
        grid-template-columns: 20% 70% 10%;
  }
  body header .h-navbar nav .nav-non-responsive {
    display: none;
    position: absolute;
    right: 0;
    top: 153px;
    width: 150px;
    background-color: whitesmoke;
  }
  body header .h-navbar nav .nav-non-responsive ul li {
    display: block;
  }
  body header .h-navbar nav .nav-non-responsive ul li a {
    color: black;
  }
  body header .h-navbar nav .nav-non-responsive ul li a:hover {
    color: grey;
  }
  body header .h-navbar nav .nav-responsive {
    display: block;
  }
}

@media only screen and (max-width: 700px) {
  body header .h-navbar {
    display: -ms-grid;
    display: grid;
    -ms-grid-columns: 25% 65% 10%;
        grid-template-columns: 25% 65% 10%;
  }
  body main .main-content article .article-content {
    height: 600px;
    display: -ms-grid;
    display: grid;
    -ms-grid-columns: (1fr)[1];
        grid-template-columns: repeat(1, 1fr);
  }
  body main .main-content article .article-content .a-video-embed {
    padding: 20px;
  }
  body main .main-content article .article-content .a-video-info {
    padding: 20px;
  }
  body main .main-content article .article-content button {
    left: 20px !important;
  }
}

@media only screen and (max-width: 600px) {
  body header .h-navbar .h-navbar-search {
    display: none;
  }
  body header .h-navbar nav .nav-responsive {
    padding-right: 10px;
  }
}
